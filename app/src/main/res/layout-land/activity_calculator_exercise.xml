<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Calculator.CalculatorExercise">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="570dp"
        android:layout_height="221dp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/solutionView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="right"
            android:text=""
            android:textColor="#6A0606"
            android:textSize="35dp"
            app:layout_constraintBottom_toTopOf="@+id/resultView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"></TextView>

        <TextView
            android:id="@+id/resultView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text=""
            android:textColor="#6A0606"
            android:textSize="35dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"></TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout7"
        android:layout_width="632dp"
        android:layout_height="188dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="600dp"
            android:layout_height="142dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_sub"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:backgroundTint="#FF7F7F"
                    android:text="-"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_equal"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:backgroundTint="#FF7F7F"
                    android:text="="
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_c"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:backgroundTint="#B53F7C"
                    android:text="C"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_divide"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:backgroundTint="#FF7F7F"
                    android:text="/"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_multi"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:backgroundTint="#FF7F7F"
                    android:text="*"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_add"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:backgroundTint="#FF7F7F"
                    android:text="+"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:cornerRadius="36dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_4"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:text="4"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_5"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:text="5"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_6"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:text="6"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_7"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:text="7"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_8"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:text="8"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_9"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:text="9"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:cornerRadius="36dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_1"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_2"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:text="2"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_3"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:text="3"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_AllClear"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:text="AC"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_0"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_dot"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:text="."
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_open_b"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:backgroundTint="#CA4F4F"
                    android:text="("
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_close_c"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:backgroundTint="#CA4F4F"
                    android:text=")"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:cornerRadius="36dp" />

            </TableRow>

        </TableLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>